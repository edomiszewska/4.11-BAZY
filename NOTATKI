=================
select klienci.ImieKlienta as 'imie',
klienci.NazwiskoKlienta as 'nazwisko',
klienci.MiastoKlienta as 'miasto',
'klient' as 'kto'
from klienci
union 
select pracownicy.ImiePracownika,
pracownicy.NazwiskoPracownika,
'pracownik'
from pracownicy;
